import { useEffect } from "react";
import { useLocation } from "react-router-dom";

const ScrollToTop = () => {
  const { pathname } = useLocation();

  useEffect(() => {
    window.scrollTo(0, 0); // Hace scroll al inicio de la p√°gina cada vez que la URL cambie
  }, [pathname]);

  return null;
};

export default ScrollToTop;
